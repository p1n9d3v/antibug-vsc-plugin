<div class="interaction">
  <div class="interaction__chain">
    <p>Chain</p>
    <select>
      <option>MainNet</option>
    </select>
  </div>
  <div class="interaction__from">
    <p>From Address</p>
    <div class="interaction__from-list">
      <select></select>
      <button class="copy">
        <i class="fas fa-copy"></i>
      </button>
    </div>
  </div>
  <div class="interaction__to">
    <p>To Address</p>
    <input />
  </div>
  <div class="interaction__gas">
    <p>Gas Limit</p>
    <input type="number" value="3000000" />
  </div>
  <div class="interaction__value">
    <p>Value</p>
    <div class="interaction__value-amount">
      <input type="number" />
      <select>
        <option>ETH</option>
        <option>Gwei</option>
        <option>Wei</option>
      </select>
    </div>
  </div>
</div>
